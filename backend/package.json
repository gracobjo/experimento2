{
  "name": "despacho-abogados-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de gesti√≥n de despacho de abogados",
  "main": "src/main.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "node scripts/copy-templates.js",
    "verify-templates": "node scripts/verify-templates.js",
    "build:with-verify": "npm run build && npm run verify-templates",
    "diagnose-pdf": "node scripts/diagnose-pdf-issue.js",
    "fix-pdf": "node scripts/fix-pdf-issue.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "ts-node prisma/seed.ts",
    "cleanup": "node scripts/cleanup-uploads.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.19",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/websockets": "^10.4.19",
    "@peculiar/webcrypto": "^1.5.0",
    "@prisma/client": "^6.11.1",
    "@types/compression": "^1.8.1",
    "@types/jwt-decode": "^2.2.1",
    "@types/nodemailer": "^6.4.17",
    "@types/xmldom": "^0.1.34",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.8.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jwt-decode": "^4.0.0",
    "nodemailer": "^7.0.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "pkijs": "^3.2.5",
    "puppeteer": "^24.13.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "xadesjs": "^2.4.4",
    "xmlbuilder2": "^3.1.1",
    "xmldom": "^0.6.0",
    "xmldsigjs": "^2.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "prisma": "^6.11.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../jest.setup.ts"
    ]
  }
}
